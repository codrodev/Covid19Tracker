<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vmFragmentSelfAssessment"
            type="com.android.dubaicovid19.view.viewModels.SelfAssessmentViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:id="@+id/layoutTopMenu"
            android:layout_width="match_parent"
            android:background="@drawable/page_header"
            android:orientation="vertical"
            android:layoutDirection="locale"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logoPolice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dubai_police_small"/>
                <TextView
                    android:layout_toRightOf="@+id/logoPolice"
                    style="@style/font_large"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="@string/dubai_police"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/btnHome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:src="@mipmap/new_home"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/header_border"/>
            </RelativeLayout>

        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_below="@+id/layoutTopMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="locale"
            android:layout_marginBottom="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layoutDirection="locale"
                android:orientation="vertical">
                <TextView
                    style="@style/font_large"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/self_assessment"
                    android:layout_marginVertical="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/font_medium"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:text="@string/self_question_1"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:layout_marginVertical="10dp"/>
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center">
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:id="@+id/chipYes1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_like"
                            android:paddingLeft="40dp"
                            android:paddingVertical="20dp"
                            android:background="@color/chip_in_active"
                            android:paddingRight="20dp"
                            android:layoutDirection="locale"
                            android:text="@string/yes"
                            android:layout_marginHorizontal="10dp"/>
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:id="@+id/chipNo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_dislike_active"
                            android:paddingLeft="40dp"
                            android:paddingVertical="20dp"
                            android:paddingRight="20dp"
                            android:layoutDirection="locale"
                            android:text="@string/no"
                            android:textColor="@color/white"
                            android:background="@color/chip_active"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/font_medium"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:text="@string/self_question_2"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:layout_marginVertical="10dp"/>
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center">
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:id="@+id/chipYes2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_like"
                            android:paddingLeft="40dp"
                            android:paddingVertical="20dp"
                            android:background="@color/chip_in_active"
                            android:paddingRight="20dp"
                            android:text="@string/yes"
                            android:layoutDirection="locale"
                            android:layout_marginHorizontal="10dp"/>
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:id="@+id/chipNo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_dislike_active"
                            android:paddingLeft="40dp"
                            android:paddingVertical="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/no"
                            android:textColor="@color/white"
                            android:layoutDirection="locale"
                            android:background="@color/chip_active"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/font_medium"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:text="@string/self_question_3"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:layout_marginVertical="10dp"/>
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center">
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:id="@+id/chipYes3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_like"
                            android:paddingLeft="40dp"
                            android:paddingVertical="20dp"
                            android:background="@color/chip_in_active"
                            android:paddingRight="20dp"
                            android:text="@string/yes"
                            android:layoutDirection="locale"
                            android:layout_marginHorizontal="10dp"/>
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:id="@+id/chipNo3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_dislike_active"
                            android:paddingLeft="40dp"
                            android:paddingVertical="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/no"
                            android:textColor="@color/white"
                            android:layoutDirection="locale"
                            android:background="@color/chip_active"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        style="@style/font_medium"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_height="wrap_content"
                        android:text="@string/self_question_4"
                        android:singleLine="false"
                        android:maxLines="5"
                        android:layout_marginVertical="10dp"/>
                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center">
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:id="@+id/chipYes4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_like"
                            android:paddingLeft="40dp"
                            android:paddingVertical="20dp"
                            android:background="@color/chip_in_active"
                            android:paddingRight="20dp"
                            android:text="@string/yes"
                            android:layoutDirection="locale"
                            android:layout_marginHorizontal="10dp"/>
                        <com.google.android.material.chip.Chip
                            style="@style/Widget.MaterialComponents.Chip.Action"
                            android:id="@+id/chipNo4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:chipIcon="@drawable/ic_dislike_active"
                            android:paddingLeft="40dp"
                            android:paddingVertical="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/no"
                            android:textColor="@color/white"
                            android:layoutDirection="locale"
                            android:background="@color/chip_active"/>
                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/rounded_button"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </RelativeLayout>
</layout>