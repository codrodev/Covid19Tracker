<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vmFragmentHelpline"
            type="com.android.dubaicovid19.view.viewModels.HelplineViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layoutTopMenu"
            android:layout_width="match_parent"
            android:background="@drawable/page_header"
            android:orientation="vertical"
            android:layoutDirection="locale"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logoPolice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dubai_police_small"/>
                <TextView
                    android:layout_toRightOf="@+id/logoPolice"
                    style="@style/font_large"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="@string/dubai_police"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/btnHome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:src="@mipmap/new_home"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/header_border"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/txtHeading"
            style="@style/font_large"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:text="@string/helpline"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerHelpLine"
            app:setVerticalAdapter="@{vmFragmentHelpline.getAdapter()}"/>
    </LinearLayout>
</layout>