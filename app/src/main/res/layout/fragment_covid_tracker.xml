<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vmFragmentCovidTracker"
            type="com.android.dubaicovid19.view.viewModels.CovidTrackerViewModel" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:fitsSystemWindows="true">
        <LinearLayout
            android:id="@+id/layoutTopMenu"
            android:layout_width="match_parent"
            android:background="@drawable/page_header"
            android:orientation="vertical"
            android:layoutDirection="locale"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/logoPolice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dubai_police_small"/>
                <TextView
                    android:layout_toRightOf="@+id/logoPolice"
                    style="@style/font_large"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:text="@string/dubai_police"
                    android:layout_weight="2"/>
                <ImageView
                    android:id="@+id/btnHome"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="10dp"
                    android:src="@mipmap/new_home"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/header_border"/>
            </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_below="@+id/layoutTopMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">
                <TextView
                    android:layout_alignParentTop="true"
                    android:id="@+id/txtHeading"
                    style="@style/font_large"
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginVertical="10dp"
                    android:layout_height="wrap_content"
                    android:text="@string/covid_tracker"/>
                <ImageView
                    android:id="@+id/btnRefresh"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/ic_refresh"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_below="@+id/txtHeading">
                    <TextView
                        android:id="@+id/txtUAE"
                        style="@style/font_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uae"/>
                    <Switch
                        android:id="@+id/switchStatistics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:track="@drawable/switch_track_custom"
                        android:shadowColor="@color/green"/>
                    <TextView
                        android:id="@+id/txtWorld"
                        style="@style/font_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/world"/>
                </LinearLayout>
            </RelativeLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_below="@+id/layoutHeader"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="2dp"
                            android:background="@color/grid_background"
                            android:layout_weight="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/imgConfirm"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/analytics"/>
                                <LinearLayout
                                    android:layout_below="@+id/imgConfirm"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_centerHorizontal="true">
                                    <TextView
                                        android:id="@+id/txtConfirm"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/font_medium"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/font_small"
                                        android:textColor="@color/green"
                                        android:textAlignment="center"
                                        android:textAllCaps="true"
                                        android:text="@string/confirmed"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="2dp"
                            android:background="@color/grid_background"
                            android:layout_weight="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/imgActive"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/activation"/>
                                <LinearLayout
                                    android:layout_below="@+id/imgActive"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center_horizontal"
                                    android:layout_centerHorizontal="true">
                                    <TextView
                                        android:id="@+id/txtActive"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/font_medium"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/font_small"
                                        android:textColor="@color/green"
                                        android:textAlignment="center"
                                        android:textAllCaps="true"
                                        android:text="@string/active"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="2dp"
                            android:background="@color/grid_background"
                            android:layout_weight="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/imgRecovered"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/patient"/>
                                <LinearLayout
                                    android:layout_below="@+id/imgRecovered"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_centerHorizontal="true">
                                    <TextView
                                        android:id="@+id/txtRecovered"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/font_medium"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/font_small"
                                        android:textColor="@color/green"
                                        android:textAllCaps="true"
                                        android:textAlignment="center"
                                        android:text="@string/recovered"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginHorizontal="2dp"
                            android:background="@color/grid_background"
                            android:layout_weight="1">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/imgDeceased"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/morgue"/>
                                <LinearLayout
                                    android:layout_below="@+id/imgDeceased"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_centerHorizontal="true">
                                    <TextView
                                        android:id="@+id/txtDeceased"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/font_medium"
                                        android:textAlignment="center"
                                        android:textColor="@color/white"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/font_small"
                                        android:textColor="@color/green"
                                        android:textAlignment="center"
                                        android:textAllCaps="true"
                                        android:text="@string/deceased"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:elevation="5dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp">
                        <com.anychart.AnyChartView
                            android:id="@+id/areaChart"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="240dp"/>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </RelativeLayout>
</layout>