<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@mipmap/home_bg"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layoutTopMenu"
        android:layout_width="match_parent"
        android:background="@drawable/page_header"
        android:orientation="vertical"
        android:layoutDirection="locale"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/logoPolice"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/dubai_police_small"/>
            <TextView
                android:layout_toRightOf="@+id/logoPolice"
                style="@style/font_large"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:text="@string/dubai_police"
                android:layout_weight="2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/header_border"/>
        </RelativeLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btnEnglish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_button"
                android:text="@string/language_en"
                android:layout_margin="20dp"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
            <Button
                android:id="@+id/btnArabic"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_button"
                android:text="@string/language_ar"
                android:textColor="@color/white"
                android:textAllCaps="false"/>
        </LinearLayout>
</LinearLayout>